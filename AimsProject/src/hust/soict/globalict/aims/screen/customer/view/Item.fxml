<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane style="-fx-border-color: black;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18">
   <children>
      <VBox alignment="CENTER" layoutX="4.0" layoutY="1.0" prefHeight="191.0" prefWidth="305.0">
         <children>
            <Label fx:id="lblTitle" prefHeight="50.0" prefWidth="305.0" text="Title" />
            <Label fx:id="lblCost" prefHeight="50.0" prefWidth="305.0" text="Cost" />
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="305.0" spacing="20.0">
               <children>
                  <Button fx:id="btnAddToCart" mnemonicParsing="false" onAction="#btnAddToCartClicked" prefHeight="50.0" prefWidth="305.0" text="Add to Cart" />
                  <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#btnPlayClicked" prefHeight="50.0" prefWidth="305.0" text="Play" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
